<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/franciabandera"
    android:foregroundTint="@color/white"
    tools:context=".franciaActivity">

    <Button
        android:id="@+id/btnVideoDragon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ver Video"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.947" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="383dp"
        android:layout_height="287dp"
        android:labelFor="@id/btnVideoDragon"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/francia2018"
        tools:layout_editor_absoluteX="12dp"
        tools:layout_editor_absoluteY="16dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="360dp"
        android:layout_height="301dp"
        android:layout_marginTop="16dp"
        android:text="La Copa Mundial de la FIFA Francia 1998 fue la decimosexta edición de la Copa Mundial de Fútbol, se desarrolló en Francia, entre el 10 de junio y el 12 de julio de 1998. Francia se convirtió en el tercer país en organizar dos campeonatos (tras México e Italia), 60 años después del mundial realizado en 1938."
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/btnVideoDragon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"
        app:layout_constraintVertical_bias="0.296" />
</androidx.constraintlayout.widget.ConstraintLayout>